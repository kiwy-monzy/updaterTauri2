{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "updatertauri",
  "version": "0.1.0",
  "identifier": "com.pc.updatertauri",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1430",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Table Top",
        "dragDropEnabled": true,
        "center": true,
        "minWidth": 1200,
        "minHeight": 850,
        "transparent": true,
        "devtools": true,
        "resizable": false,
        "fullscreen": false,
        "decorations": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "basicUi"
      },
